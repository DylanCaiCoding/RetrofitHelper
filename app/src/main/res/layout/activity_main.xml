<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".JavaActivity">

  <Button
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="baidu news"
    android:onClick="requestBaiduNews"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:id="@+id/btn_baidu_news"/>

  <Button
    android:text="gank"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:onClick="requestGankData"
    android:id="@+id/btn_gank"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/btn_baidu_news"
    app:layout_constraintStart_toStartOf="@+id/btn_baidu_news"
    app:layout_constraintEnd_toEndOf="@+id/btn_baidu_news"/>

  <Button
    android:text="login"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:onClick="requestLogin"
    android:id="@+id/btn_login"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/btn_gank"
    app:layout_constraintStart_toStartOf="@+id/btn_gank"
    app:layout_constraintEnd_toEndOf="@+id/btn_gank"/>

  <Button
    android:text="Download"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/btn_download"
    android:onClick="download"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/btn_login"
    app:layout_constraintStart_toStartOf="@+id/btn_login"
    app:layout_constraintEnd_toEndOf="@+id/btn_login"/>

</android.support.constraint.ConstraintLayout>